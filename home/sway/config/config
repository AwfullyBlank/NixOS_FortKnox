set $mod Mod1
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $menu wofi --show drun 
set $browser librewolf

exec env LANG=en_US.UTF-8 

### keyboard layout
input "type:keyboard" {
xkb_layout no
}

mouse_warping none
output eDP-1 pos 0 0
output HDMI-A-1 pos 1920 0

### Wallpaper
#output * bg /home/null/Pictures/Wallpaper/WALL-E.jpg fill

# Launch applications
bindsym $mod+space exec $term
bindsym $mod+q kill
bindsym $mod+m exec $menu
bindsym $mod+c exec $term --working-directory ~/.config
bindsym $mod+n exec $term --working-directory ~/NixOS 
bindsym $mod+b exec $browser 

floating_modifier $mod normal

# Config reload / exit
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec swaymsg exit

# Fullscreen
bindsym $mod+f fullscreen

# Focus movement
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

#workspace output
workspace 1|BreakingBad output HDMI-A-1
workspace 2|WALL-E output HDMI-A-1
workspace 3|Borat output HDMI-A-1
workspace 4|IronMan output HDMI-A-1
workspace 5|Mr.robot output HDMI-A-1

# Workspace switching
bindsym space+1 workspace number 1|BreakingBad 
bindsym space+2 workspace number 2|WALL-E
bindsym space+3 workspace number 3|Borat
bindsym space+4 workspace number 4|IronMan
bindsym space+5 workspace number 5|Mr.robot
bindsym space+6 workspace number 6|Dexter
bindsym space+7 workspace number 7|BetterCallSaul
bindsym space+8 workspace number 8|FightClub
bindsym space+9 workspace number 9|TheTruManShow
bindsym space+0 workspace number 10|Superbad

# Move container to workspace
bindsym space+shift+1 move container to workspace number 1|BreakingBad
bindsym space+shift+2 move container to workspace number 2|WALL-E
bindsym space+shift+3 move container to workspace number 3|Borat
bindsym space+shift+4 move container to workspace number 4|IronMan
bindsym space+shift+5 move container to workspace number 5|Mr.Robot
bindsym space+shift+6 move container to workspace number 6|Dexter
bindsym space+shift+7 move container to workspace number 7|BetterCallSaul
bindsym space+shift+8 move container to workspace number 8|FightClub
bindsym space+shift+9 move container to workspace number 9|TheTruManShow
bindsym space+shift+0 move container to workspace number 10|Superbad 

# Screenshot with slurp
bindsym $mod+g exec grim -g "$(slurp)" 

# Move container
bindsym $mod+shift+$left move left
bindsym $mod+shift+$down move down
bindsym $mod+shift+$up move up
bindsym $mod+shift+$right move right
bindsym $mod+return splith
bindsym $mod+backspace splitv

#wpctl, playerctl
bindsym $mod+p exec playerctl play-pause
bindsym $mod+Right exec playerctl next
bindsym $mod+left exec playerctl previous
bindsym $mod+up exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 10%+
bindsym $mod+down exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 10%-
bindsym $mod+shift+m exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

bindsym super+$left resize grow width 200px
bindsym super+$down resize shrink height 200px
bindsym super+$up resize grow height 200px
bindsym super+$right resize shrink width 200px

bindsym $mod+shift+down exec brightnessctl set 20%-
bindsym $mod+shift+up exec brightnessctl set 20%+

# Set colors for focused window border, inactive window border, and background
client.focused            #222222 #ffffff #ffffff
client.unfocused          #222222 #222222 #222222
client.focused_inactive   #222222 #222222 #222222
client.urgent             #222222 #222222 #222222

### Appearance
default_border pixel 2
